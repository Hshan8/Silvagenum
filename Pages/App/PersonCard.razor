<div class="col">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between mt-2">
                <h2 class="text-start">
                    <a href="People/Details/@Person!.Id">@Person</a>
                </h2>
                <div class="text-nowrap">
                    @switch (SelectionType)
                    {
                        case "mother":
                            <a href="People/EditRelation/@RelatedId/@Person.Id/0" class="btn btn-secondary">Link</a>
                            break;
                        case "father":
                            <a href="People/EditRelation/@RelatedId/@Person.Id/1" class="btn btn-secondary">Link</a>
                            break;
                        case "child":
                            <a href="People/EditRelation/@Person.Id/@RelatedId/2" class="btn btn-secondary">Link</a>
                            break;
                        case "unlink-mother":
                            <a href="People/EditRelation/@RelatedId/0/0" class="btn btn-secondary">Unlink</a>
                            break;
                        case "unlink-father":
                            <a href="People/EditRelation/@RelatedId/0/1" class="btn btn-secondary">Unlink</a>
                            break;
                        case "unlink-child":
                            <a href="People/EditRelation/@Person.Id/@RelatedId/2" class="btn btn-secondary">Unlink</a>
                            break;
                        default:
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
</div>