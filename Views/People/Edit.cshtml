@model Person

<form asp-action="Edit" method="post" role="form">
    <h3>
        You're editing @Model.FullName
    </h3>

    <input type="hidden" asp-for="Id" />

    <partial name="_PersonForm" model="Model" />

    <div class="mt-2">
        <div class="col-md-5">
            <input type="submit" class="btn btn-success" value="Save" />
                <a asp-controller="People" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>