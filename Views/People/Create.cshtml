@model Person

<form asp-action="Create" method="post" role="form">
    <h3>
        You're creating a new person in the repository
    </h3>

    <partial name="_PersonForm" model="Model" />
    <div class="mt-2">
        <div class="col-md-5">
            <input type="submit" class="btn btn-success" value="Save" />
            <a asp-controller="People" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>