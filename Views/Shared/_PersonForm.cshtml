@model Person


<div asp-validation-summary="All" class="text-danger"></div>

<div class="col-6">
    <div class="row g-2">
        <div class="col-12">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Surname" class="form-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Gender" class="form-label"></label><br />
            <input type="radio" asp-for="Gender" class="form-switch" value="@Gender.male" />
            <label>Male</label><br />
            <input type="radio" asp-for="Gender" class="form-switch" value="@Gender.female" />
            <label>Female</label>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
</div>